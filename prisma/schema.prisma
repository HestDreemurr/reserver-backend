generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role String
  
  @@map("customers")
}

model Table {
  id String @id @default(uuid())
  name String
  capacity Int
  status String
  
  @@map("tables")
}